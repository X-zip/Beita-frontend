<view class="page">
  <view class="tip">出于平台规则，无法直接跳转外部网页。可复制链接打开。</view>

  <!-- 开源仓库 -->
  <view class="section">
    <view class="section-title">开源仓库</view>
    <block wx:for="{{repos}}" wx:key="url">
      <view class="item">
        <view class="item-main">
          <view class="item-title">{{item.name}}</view>
          <view class="item-sub" selectable="true">{{item.url}}</view>
        </view>
        <view class="item-actions">
            <van-button
            type="success"
            size="small"
            round
            data-url="{{item.url}}"
            bind:tap="copyLink"
            >复制</van-button>
          <!-- <button size="mini" class="btn" bindtap="previewQR" data-src="{{item.qr}}">二维码</button> -->
        </view>
      </view>
    </block>
  </view>

  <!-- 联系方式 -->
  <view class="section">
    <view class="section-title">联系方式</view>
    <block wx:for="{{contacts}}" wx:key="value">
      <view class="item">
        <view class="item-main">
          <view class="item-title">{{item.label}}</view>
          <view class="item-sub" selectable="true">{{item.value}}</view>
        </view>
        <view class="item-actions">
            <van-button
            type="success"
            size="small"
            round
            data-url="{{item.value}}"
            bind:tap="copyLink"
            >复制</van-button>
        </view>
      </view>
    </block>
  </view>
  

  <!-- 二维码（可选） -->
  <view class="section" wx:if="{{qrcodes.length}}">
    <view class="section-title">二维码</view>
    <view class="qr-grid">
      <block wx:for="{{qrcodes}}" wx:key="img">
        <view class="qr-card" bindtap="previewQRCodes" data-index="{{index}}">
          <image class="qr-img" mode="aspectFit" src="{{item.img}}" />
          <view class="qr-name">{{item.name}}</view>
        </view>
      </block>
    </view>
  </view>
</view>




