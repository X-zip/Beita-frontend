/* pages/uitem/login/login.wxss */
.login-form {
    flex: 1;
    display: flex;
    flex-direction: column;
    align-items: stretch;
    justify-content: center;
  }

.unlogin {
    width: 80rpx;
    height: 80rpx;
    border-radius: 50%;
  }

  .avatar {
    width: 80rpx;
    height: 80rpx;
    margin: 15rpx;
    border-radius: 50%;
    display: inline-block;
  }
  
.username-input {
    text-align: center;
    color: black;
    width: 70%;
}

.wx-button-1 {
    margin-top: 20px;
    color: #FFF;
    background-color: #D98F14;
    font-size: 28rpx;
    align-items: center;
    flex-basis: 30%;
    padding: 20rpx;
    border-radius: 20rpx;
  }

  .input-group {
    display: flex;
    align-items: center;
    padding: 25rpx 10rpx;
    margin: 40rpx 3%;
    background: #fff;
    border-radius: 5px;
    border: 2px solid #f4f4f4;
    transition: all .25s ease-in-out;
  }

  .img-group {
    display: flex;
    align-items: center;
    padding: 25rpx 10rpx;
    margin: 40rpx 3%;
    background: #fff;
    border-radius: 5px;
    border: 2px solid #f4f4f4;
    transition: all .25s ease-in-out;
    white-space: nowrap;
    overflow:auto;
  }

  .input-label {
    color: #888;
    font-size: 13pt;
    height: 25rpx;
    line-height: 25rpx;
    padding: 0 25rpx;
    border-right: 1px solid #d8d8d8; 
  }

  .selectAvatar {
    border: 4rpx #D98F14 solid;
  }