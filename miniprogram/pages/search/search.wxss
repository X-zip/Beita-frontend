.slide-image {
  width: 100%;
}
.menu-wrp {
  width: 90%;
  margin-left: 5%;
  background-color: #f6f6f6;
  border-radius: 20rpx;
}

.menu-wrp:after {
  content: "";
  display: block;
  clear: both;
}

.menu-list {
  float: left;
  width: 25%;
  box-sizing: border-box;
  padding: 20rpx;
}

.menu-img {
  width: 80rpx;
  height: 80rpx;
  display: block;
  margin: 0 auto;
  margin-bottom: 5px;
}

.menu-desc {
  color: #2c2c2c;
  width: 100%;
  text-align: center;
  display: block;
  font-size: 12px;
  font-weight: 800;
}


.task-list-item {
  width: 90%;
  margin: 5%;
  margin-top: 20rpx;
  background: #f6f6f6;
  border-radius: 20rpx;
  height: 240rpx;
}
.box-left {
  width: 60%;
  height: 100%;
  float: left;
}
.box-right {
    position: relative;
    margin-left: 60%;
    width: 40%;
    height: 100%;
  }

.img {
  width: 48rpx;
  height: 48rpx;
  border-radius: 50%;
  margin: 20rpx;
  float: left;
}


.names_fl {
  font-size: 24rpx;
  color: #2c2c2c;
  margin-left: 20rpx;
  line-height: 34px;
  font-weight: 800;
}

.head {
  height: 30%;
  line-height: 30%;

}
.title_box {  
  height: 70%;
}
.task_title {
  height: 50%;
  padding:20rpx;
  font-size: 28rpx;
  color: #2c2c2c;
}

.comment_num {
  color: #2c2c2c;
  font-size: 12px;
  margin-left: 2px;
  margin-left: 10rpx;
}

.like_img {
  width: 12px;
  height: 12px;
  margin-left: 5rpx;
}

.comment_img {
  width: 12px;
  height: 12px;
  margin-left: 20rpx;
}

.price {
  color: red;
  font-size: 12px;
  margin-left: 20rpx;
}




.c_time {
  font-size: 20rpx;
  color: #999;
  line-height: 32px;
  text-align: center;
  float: right;
  margin-right: 15px;
}

.task_img {
    width: 96px;
    height: 72px;
    position: absolute; /* 使用绝对定位 */
    top: 50%;           /* 垂直方向居中 */
    right: 15px;        /* 距离右边 15px */
    transform: translateY(-50%); /* 修正垂直方向偏移 */
}


.campusBox {
  float: right;
  margin-right: 15px;
}

.campusTitle {

  font-size: 20rpx;
  color: #999;
}

.campus {
  font-size: 20rpx;
  color: #999;
}

.moreimg {
  width: 50rpx;
  height: 50rpx;
  margin-top: 20rpx;

}

.hot-box {

  height: 12px;
  margin-left: 5rpx;
  float: left;
}
@media (prefers-color-scheme: dark) {
  /* DarkMode 下的样式 start */
  page {
    background: #191919;
  }
  .scrollView {
    background: #191919;
  }
  .top-box {
    background:#191919;
  }
  .scrollView-small .on-small{ 
    border-bottom: 4rpx #cdcdcd solid;
  }
  .menu-desc-small {
    color: #cdcdcd;
  }
  .menu-desc {
    color: #cdcdcd; 
  }
  .task-list-item {
    background: #292929;
  }
  .task_title {
    color: white;
  }
  .names_fl {
    color: white;
  }
  .comment_num {
    color: white;
  }
  .scrollView {
    background-color: #292929;
  }
  .topnav {
    background-color: #292929;
  }
  .price {
    color: white;
  }
  /* DarkMode 下的样式 end */
}