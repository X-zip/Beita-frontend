.top-box {
    background:linear-gradient(powderblue, powderblue,white);
  }
  
  .index-swiper {
    width: 100%;
    height: 320rpx;
  }
  
  .slide-image {
    width: 90%;
    margin-top: 20rpx;
    margin-left: 5%;
    height: 250rpx;
    border-radius: 20rpx;
  }
  
  .scrollView {
    width: 90%;
    margin-left: 5%;
    background-color: white;
    border-radius: 20rpx;
    height: auto;
  }
  .menu-wrp { white-space: nowrap; }
  
  .menu-wrp .on{ 
    color: #D98F14;
    width: 100%;
  }
  
  .menu-list {
    width: 18%;
    box-sizing: border-box;
    padding-top: 20rpx;
    padding-bottom: 20rpx;
    display: inline-block;
  }
  
  .swiper-box{ 
    display: block; 
    width: 100%; 
    overflow: hidden;
  }
  
  .section {
    margin-left: 5%;
    display: block;
    list-style: none;
    float: left;
    height: 30px;
    margin-bottom: 20px;
  }
  
  .picker {
    font-size: 28rpx;
    line-height: 50px;
    margin-left: 5px;
    color: black;
  }
  
  .down { margin-top: 5rpx; height: 28rpx; width: 28rpx; }
  
  .menu-img {
    width: 48rpx;
    height: 48rpx;
    display: block;
    margin: 0 auto;
    margin-bottom: 5px;
  }
  
  .menu-desc {
    color: black;
    width: 100%;
    text-align: center;
    display: block;
    font-size: 24rpx;
    font-weight: 600;
  }
  
  /* 顶部吸顶条：保持原样，仅合并到一处 style（WXML已合并） */
  .topnav {
    width: 100%;
    position:fixed;
    z-index:98; 
    top:var(--keyboard_height--);
    background-color: whitesmoke;
    opacity: 0.85;
  }
  .navColor { opacity: 1; z-index: 99; }
  .nav-main { background-color: powderblue; }
  .normalnav { margin-top: 20rpx; }
  .textNav { height: 50rpx; line-height: 50rpx; font-size: 24rpx; padding-top: 5rpx; padding-bottom: 5rpx; }
  .scrollColor { background-color:whitesmoke; }
  
  .task-list-item {
    width: 90%;
    margin-left: 5%;
    margin-top: 10rpx;
    background: #f6f6f6;
    border-radius: 20rpx;
    height: 240rpx;
  }
  
  .box-left { width: 60%; height: 100%; float: left; }
  .box-right { position: relative; margin-left: 60%; width: 40%; height: 100%; }
  
  .img {
    width: 48rpx;
    height: 48rpx;
    border-radius: 50%;
    margin: 20rpx;
    float: left;
  }
  
  .names_fl {
    font-size: 24rpx;
    color: black;
    margin-left: 20rpx;
    line-height: 34px;
    font-weight: 600;
  }
  
  .head { height: 30%; line-height: 30%; }
  .title_box { height: 70%; }
  
  /* 原 task_title 不变；新增 has-img / no-img 仅承接原先内联宽度逻辑 */
  .task_title {
    height: 50%;
    padding:20rpx;
    font-size: 28rpx;
    color: black;
  }
  .task_title.has-img { width: 100%; }
  .task_title.no-img  { width: 160%; }
  
  .comment_num { color: #999; font-size: 12px; margin-left: 10rpx; }
  .like_img { width: 12px; height: 12px; margin-left: 5rpx; }
  .comment_img { width: 12px; height: 12px; margin-left: 20rpx; }
  .price { color: red; font-size: 12px; margin-left: 20rpx; }
  
  .c_time {
    font-size: 20rpx;
    color: #999;
    line-height: 32px;
    text-align: center;
    float: right;
    margin-right: 15px;
  }
  
  .task_img {
    width: 96px;
    height: 72px;
    position: absolute;
    top: 50%;
    right: 15px;
    transform: translateY(-50%);
  }
  
  .campusBox { float: right; margin-right: 15px; }
  .campusTitle { font-size: 20rpx; color: #999; }
  .campus { font-size: 20rpx; color: #999; float:left; }
  .moreimg { width: 50rpx; height: 50rpx; margin-top: 20rpx; }
  .type { font-size: 20rpx; color: #999; float: left; margin-left: 10rpx; }
  
  .hot-box { height: 12px; margin-left: 5rpx; float: left; }
  
  .scrollView-small {
    display: flex;
    justify-content: space-around;
    align-items: center;
    padding-top: 20rpx;
    font-size: 24rpx;
    font-weight: 600;
  }
  .scrollView-small .on-small{ border-bottom: 4rpx #D98F14 solid; }
  .menu-list-small { box-sizing: border-box; display: inline-block; }
  .menu-desc-small {
    color: black;
    text-align: center;
    font-size: 28rpx;
    line-height: 28rpx;
    display: block;
    padding-bottom: 20rpx;
  }
  
  .qr-list {
    width: 90%;
    margin-left: 5%;
    margin-top: 40rpx;
    background-color: #f6f6f6;
    display: flex;
    justify-content: space-between;
    border-radius: 20rpx;
  }
  .qr-box { width: 80%; text-align: center; }
  .qr-text { font-size: 32rpx; font-weight: 600; color: black; text-align: center; flex-basis: 100%; padding: 20rpx; }
  .qr-item { margin-top: 40rpx; margin-bottom: 40rpx; align-items: center; flex-basis: 100%; padding: 20rpx; }
  .qr-image { width: 90%; }
  .qr-title { display: flex; justify-content: center; font-weight: 64rpx; margin-top: 50rpx; font-weight: 600; color: black; text-align: center; }
  /* 围观人数显示 */
.watch-text {
    font-size: 22rpx;        /* 字体大小，和页面整体统一 */
    color: #666;             /* 默认字体颜色 */
    margin-left: 10rpx;      /* 和左侧元素保持距离 */
    vertical-align: middle;  /* 垂直居中对齐 */
    font-weight: 600;        /* 字体稍微加粗，增强可读性 */
    padding: 4rpx 8rpx;      /* 增加内边距，视觉更舒适 */
    border-radius: 8rpx;     /* 圆角，让标签更柔和 */
  }

  @media (prefers-color-scheme: dark) {
    page { background: #191919; }
    .scrollView { background: #191919; }
    .top-box { background:#191919; }
    .scrollView-small .on-small{ border-bottom: 4rpx #cdcdcd solid; }
    .menu-desc-small { color: #cdcdcd; }
    .menu-desc { color: #cdcdcd; }
    .task-list-item { background: #292929; }
    .task_title { color: white; }
    .names_fl { color: white; }
    .comment_num { color: white; }
    .scrollView { background-color: #292929; }
    .topnav { background-color: #292929; }
    .price { color: white; }
    .watch-text { color: #e6e6e6;}
  }
  