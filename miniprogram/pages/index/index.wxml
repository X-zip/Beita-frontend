    <block wx:for="{{bannerList}}" class="slide-block">
      <swiper-item>
        <image src="{{item.imageUrl}}" class="slide-image" mode="widthFix" data-id="{{item.navUrl}}" />
      </swiper-item>
    </block>
  </swiper>
